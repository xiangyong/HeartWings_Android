<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
>

    <TextView
        android:id="@+id/main_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dip"
        android:textColor="#111"
         />
       
    <ImageView 
        android:id="@+id/main_news_img"
          android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
         android:paddingTop="8dip"
         android:layout_below="@id/main_news_title"
        android:contentDescription="@string/app_cn"
        />
    
    <TextView 
        android:id="@+id/main_news_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:padding="15dip"
        android:layout_below="@id/main_news_img"
        />
</RelativeLayout>
