<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingRight="9.0dip"
    android:paddingTop="10.0dip" >
    
     <RelativeLayout
        android:id="@+id/moment_left_of_comment_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.0dip"
        android:background="@drawable/thought_bubble" >
        
                 <TextView
            android:id="@+id/showcontent"
            style="@style/feed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:minHeight="40.0dip"
            android:paddingBottom="4.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="6.0dip"
            android:paddingTop="4.0dip" />
                            
            <ImageView 
                android:id="@+id/baidupic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showcontent"
                android:padding="10dip"
                />
                 <TextView 
                android:id="@+id/baidutianqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/baidupic"
                 android:layout_below="@id/showcontent"
                android:paddingLeft="5dip"
                android:paddingTop="10dip"
                />
            <TextView 
                android:id="@+id/baiduwendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/baidutianqi"
                 android:layout_below="@id/showcontent"
                android:paddingLeft="5dip"
                android:paddingTop="10dip"
                />
            <TextView 
                android:id="@+id/baidupm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/baiduwendu"
                android:layout_below="@id/showcontent"
                 android:paddingLeft="10dip"
                android:paddingTop="10dip"
                />
         </RelativeLayout>
 </LinearLayout>
