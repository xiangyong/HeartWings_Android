<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingRight="9.0dip"
    android:paddingTop="10.0dip" >
    
     <RelativeLayout
        android:id="@+id/moment_left_of_comment_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.0dip"
        android:background="@drawable/thought_bubble" >
        
                 <TextView
            android:id="@+id/event_time"
            style="@style/feed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:minHeight="40.0dip"
            android:paddingBottom="4.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="6.0dip"
              android:textSize="14sp"
            android:paddingTop="4.0dip" />
                            
                 <TextView 
                android:id="@+id/event_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_below="@id/event_time"
                android:paddingTop="10dp"
                android:textColor="#F04E2F"
                android:textSize="16sp"
                android:drawableStart="@drawable/calendar"
                />
                 

              <ImageView 
                  android:id="@+id/delete_agenda"
                      android:layout_width="wrap_content"
                android:layout_height="wrap_content"     
                android:layout_alignParentRight="true"
                  android:layout_alignTop="@id/event_detail"          
                  android:src="@drawable/delete"
                android:padding="8dip" />
              
         </RelativeLayout>
 </LinearLayout>
